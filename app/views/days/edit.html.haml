#form
  =simple_form_for @day do |f|
    #calendar
      =f.input :date
    .group
      = f.input  :temperature
      = f.input :time, :include_blank => true
      = f.input :first, label: "First Day of Cycle"
      = f.input :mensing, label: "Menses:", collection: menses_options, :include_blank => true
      = f.input :intercourse, label: "Intercourse:", collection: 1..5, :include_blank => true
    .group
      .title
        Cervical Fluid
      %br
      = f.input :cervical_fluid_feeling, label: "Feeling:", collection: cf_feeling_options, :include_blank => true
      = f.input :cervical_fluid_feeling, label: "Appearance:", collection: cf_appearance_options, :include_blank => true
    .group
      .title
        Cervix
      %br
      = f.label :cervix_position, "Position:"
      = f.select :cervix_position, c_position_options, :include_blank => true
      %br
      = f.label :cervix_opening, "Opening:"
      = f.select :cervix_opening, c_opening_options, :include_blank => true
      %br
      = f.label :cervix_texture, "Texture:"
      = f.select :cervix_texture, c_texture_options, :include_blank => true
    .group
      .title
        Other
      %b
      = f.label :ovulation_pain, "Ovulation pain:"
      = f.check_box  :ovulation_pain, :class => :boxes
      %br
      = f.label :tender_breasts, "Tender breats:"
      = f.check_box  :tender_breasts, :class => :boxes
      %br
      = f.label :fever, "Fever:"
      = f.check_box :fever, :class => :boxes
      %br
      = f.label :lack_of_sleep, "Lack of Sleep:"
      = f.check_box :lack_of_sleep, :class => :boxes
    #buttons  
      = submit_tag 'Save'
      = submit_tag 'Save & Next'
  #buttons  
    = button_to "Cancel", root_url
    = button_to "Delete", day_url(@day), :confirm => "Are you sure?",  :method => :delete, :disabled => @day.new_record?

